<?php
/** @var \Magento\Customer\Block\Adminhtml\Edit\Renderer\Attribute\Group $block */
$_element = $block->getElement();
$_note = $_element->getNote();
$_class = $_element->getFieldsetHtmlClass();?>

<?php if (!$_element->getNoDisplay()): ?>
    <div class="field with-note">
        <?php if ($_element->getType() == 'hidden'): ?>
            <div class="hidden"><?php echo $_element->getElementHtml(); ?></div>
        <?php else: ?>
            <?php echo $_element->getLabelHtml(); ?>
            <div class="control">
                <?php echo $_element->getElementHtml(); ?>
                <?php if ($block->getDisableAutoGroupChangeAttribute()): ?>
                <div class="nested">
                    <div class="field choice">
                        <input id="<?php echo $block->escapeHtml($block->getDisableAutoGroupChangeCheckboxElementId()); ?>" name="<?php echo $block->escapeHtml($block->getDisableAutoGroupChangeCheckboxElementName()); ?>" type="checkbox" <?php if ($block->getDisableAutoGroupChangeCheckboxState() == 'checked') :?> checked="checked"<?php endif; ?> value="1" class="addbefore" />
                        <label for="<?php echo $block->escapeHtml($block->getDisableAutoGroupChangeCheckboxElementId()); ?>"><span><?php echo $block->escapeHtml($block->getDisableAutoGroupChangeCheckboxLabel()); ?></span></label>
                        <?php if ($_note): ?>
                             <p class="note <?php echo $_class ? " {$_class}-note" : ''; ?>" id="note_<?php echo $_element->getId(); ?>"><?php echo $_note; ?></p>
                        <?php endif ?>
                    </div>
                </div>
                <?php endif; ?>
            </div>
        <?php endif; ?>
    </div>
<?php endif; ?>
